<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/rlTopLayout"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ibBack"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ibBack"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btMenu"
            >
            <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:text="@string/txt_unnamed"
                android:lines="1"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ibBack"
            android:layout_toLeftOf="@+id/ibMenu"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvState"
                android:text="Online"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceSmall"

                />
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="&#8942;"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/btMenu"
            android:textStyle="bold"
            android:paddingRight="-50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBotLayout"
        android:layout_below="@+id/rlTopLayout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/llBotLayout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera_icon"
            android:layout_marginLeft="@dimen/layout_margin"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:id="@+id/ivCamera"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location_icon"
            android:layout_marginLeft="@dimen/layout_margin"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/ivLocation"/>
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:hint="@string/txt_enter_message" />
        <ImageView
            android:id="@+id/ivSend"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_gravity="center_vertical"

            />

    </LinearLayout>
</RelativeLayout>