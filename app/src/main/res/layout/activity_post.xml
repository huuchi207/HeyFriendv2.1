<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/cvPostContent"

        card_view:cardElevation="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/civAvatar_ActivityPost"
                    android:src="@drawable/b175h"
                    android:layout_alignParentStart="true"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/civAvatar_ActivityPost">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:id="@+id/tvName_ActivityPost"
                        android:textStyle="bold"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:text="Nguyen Chi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/tvTime_ActivityPost"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:text="6 days ago"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:id="@+id/tvCountOfComment_ActivityPost"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:text="1 comment"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:id="@+id/tvCountOfLike_ActivityPost"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:text="3 likes"/>
                        <com.like.LikeButton
                            app:icon_type="star"
                            app:icon_size="30dp"
                            android:layout_width="15dp"
                            app:liked="true"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvContent_ActivityPost"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Hello, it's me"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/b175h"
                android:id="@+id/ivImage_ActivityPost"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="3dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/llComment"
        android:layout_below="@+id/cvPostContent"
        android:id="@+id/rv_list_comment_ActivityPost"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/llComment">
        <com.like.LikeButton
            app:icon_type="star"
            app:icon_size="30dp"
            android:id="@+id/btLike_ActivityPost"
            android:layout_width="30dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/etComment_ActivityPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:layout_marginLeft="@dimen/layout_margin"
            android:maxLines="5"
            android:hint="@string/txt_take_a_comment" />
        <ImageView
            android:id="@+id/ivSend_ActivityPost"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
</RelativeLayout>